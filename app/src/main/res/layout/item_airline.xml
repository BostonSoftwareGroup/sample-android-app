<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/airline_cardview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    android:layout_marginBottom="@dimen/card_view_bottom_margin"
    card_view:cardCornerRadius="@dimen/card_view_radius">

    <LinearLayout
        android:id="@+id/airline_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/airline_imageview"
            android:layout_width="@dimen/list_image_size"
            android:layout_height="@dimen/list_image_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/list_image_margin"
            android:layout_marginRight="@dimen/list_image_margin" />

        <TextView
            android:id="@+id/airline_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:textSize="@dimen/text_size" />
    </LinearLayout>
</android.support.v7.widget.CardView>